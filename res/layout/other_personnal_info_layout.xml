<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
  android:background="@drawable/backg">

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_bar" >

        <TextView
            android:id="@+id/ziliao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/icon_return_n"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="资料查看"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/bg2" >

                <com.zhima.opendoor.view.CircleImageView
                    android:id="@+id/headerOther"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="60dp"
                    
                    android:src="@drawable/zhima" />

                <TextView
                    android:id="@+id/usernameOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="75dp"
                    android:layout_toRightOf="@id/headerOther"
                    android:text="用户名"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/level1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameOther"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/headerOther"
                    android:text="芝麻品级:"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/levelOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameOther"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/level1"
                    android:text="生芝麻"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/sexOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="75dp"
                    android:layout_toRightOf="@id/usernameOther"
                    android:src="@drawable/icon_pop_girl" />

                <ImageView
                    android:id="@+id/levelO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/level1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/headerOther"
                    android:src="@drawable/icon_grade_lv1" />

                <ImageView
                    android:id="@+id/addFavorOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_toRightOf="@id/levelOther"
                    android:src="@drawable/icon_details_likeblack" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="个人简介"
                        android:textColor="#272727" />

                    <TextView
                        android:id="@+id/intruduceOther"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="没有留下任何文字"
                        android:textColor="#272727" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="粉丝"
                        android:textColor="#272727" />

                    <TextView
                        android:id="@+id/otherFans"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#272727" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="关注"
                        android:textColor="#272727" />

                    <TextView
                        android:id="@+id/otherAttention"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#272727" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="板块"
                        android:textColor="#272727" />

                    <TextView
                        android:id="@+id/otherModule"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#272727" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="文章"
                        android:textColor="#272727" />

                    <TextView
                        android:id="@+id/otherAticle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#272727" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/liaotian"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#3385ff"
                android:text="发送消息"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
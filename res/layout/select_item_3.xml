<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这个是一张大图的标题显示处"
        android:textSize="18sp"
        android:id="@+id/titleThree"
        android:layout_marginTop="5dp"
         android:layout_marginLeft="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" 
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.75"
            android:scaleType="fitXY"
            android:src="@drawable/pic_benba_1" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/pic_benba_1" 
            android:id="@+id/pic2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/pic_benba_1" 
            android:id="@+id/pic3"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" >

        <TextView
            android:id="@+id/modulenameThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#55272727"
            android:text="美食分享趴"
            android:textColor="#fff"
            android:textSize="12sp" 
            android:layout_marginLeft="8dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_icon_lpb_praise_n_1" />

            <TextView
                android:id="@+id/zanshuThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/zan"
                android:text="521"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/pinglu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/zanshuThree"
                android:src="@drawable/btn_icon_lpb_comment_n_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/pinglu"
                android:text="521"
                android:textSize="12sp"
                android:id="@+id/pinglunThree" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>